<!-- ======= Header ======= -->
<header id="header" class="fixed-top d-flex align-items-center header-transparent header-scrolled">
    <div class="container d-flex align-items-center justify-content-between">

        <div class="logo">
            <h1><a href="/"><span>TechMania</span></a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
        </div>

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link scrollto active" href="/">Home</a></li>
                <li>
                    <NavLink class="nav-link scrollto" href="allsmartphones">
                        Smartphones
                    </NavLink>
                </li>
                <li>
                    <NavLink class="nav-link scrollto" href="contact">
                        Contact
                    </NavLink>
                </li>
                <li class="dropdown">
                    <AuthorizeView>
                        <Authorized>
                            <a href="#"><span>Hello, @context.User.Identity.Name!</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li>
                                    <NavLink href="logout">
                                        Logout
                                    </NavLink>
                                </li>
                            </ul>
                        </Authorized>
                        <NotAuthorized>
                            <a href="#"><span>Account</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li>
                                    <NavLink href="login">
                                        Login
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink href="registration">
                                        Register
                                    </NavLink>
                                </li>
                            </ul>
                        </NotAuthorized>

                    </AuthorizeView>
                </li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav>

    </div>
